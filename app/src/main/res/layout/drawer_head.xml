<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp" android:background="?attr/colorPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_head" android:src="@mipmap/mini_avatar"
        android:layout_width="80dp" android:layout_centerInParent="true"
        android:layout_height="80dp" app:civ_border_width="1dp"
        app:civ_border_color="@color/white"/>

    <TextView android:text="点击登录" android:textColor="@color/white"
        android:layout_width="wrap_content" android:layout_below="@+id/drawer_head"
        android:layout_height="wrap_content" android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true" android:textSize="16sp"
        android:id="@+id/login"/>

</RelativeLayout>